+from __future__ import print_function
+
+from distutils.core import setup
+from distutils.command.sdist import sdist
+
+from setup import find_modules, common_metadata, extensions
+
+description = "Assorted useful extensions to certain areas of Twisted"
+long_description = """
+Adds a superior asynchronous DB-API 2.0 wrapper (twext.enterprise.adbapi2).
+"""
+
+class twext_sdist(sdist):
+    def initialize_options(self):
+        sdist.initialize_options(self)
+        self.template = "MANIFEST-twext.in"
+
+
+def doSetup():
+    keywords = common_metadata.copy()
+    keywords.update(
+        name="Calendar and Contacts Server Extensions to Twisted",
+        description=description,
+        long_description=long_description,
+        packages=[
+            module
+            for module
+            in find_modules()
+            if module.startswith("twext.") or module == "twext"],
+        ext_modules=[
+            extension
+            for extension
+            in extensions
+            if extension.name.startswith("twext.")],
+        cmdclass={"sdist": twext_sdist},
+        )
+
+    from pprint import pprint
+    pprint(keywords)
+    setup(**keywords)
+
+if __name__ == '__main__':
+    doSetup()
